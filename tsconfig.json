{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2017",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "lib": ["dom", "es2016"],
        "jsx": "react",
        "declaration": true,
		"declarationMap": true
    },
	 "exclude": [
		 "node_modules"
	 ]
}
